<?xml version="1.0"?>

<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            targetNamespace="http://www.regexp.org"
            xmlns="http://www.regexp.org"
            elementFormDefault="qualified">
    
    <!-- Declaration of new data types -->
    <xsd:simpleType name="costType">
        <xsd:restriction base = "xsd:string">
            <xsd:pattern value="\p{Sc}\p{Nd}+(\.\p{Nd}\p{Nd}?)"/>
        </xsd:restriction>
    </xsd:simpleType>
    
    <xsd:simpleType name="quantityType">
        <xsd:restriction base="xsd:string">
            <xsd:pattern value="\p{Nd}\p{Nd}"/>
        </xsd:restriction>
    </xsd:simpleType>
    
    <xsd:simpleType name="titleType">
        <xsd:restriction base="xsd:string">
            <xsd:pattern value="Mr.|Ms.|Dr."/>
        </xsd:restriction>
    </xsd:simpleType>
    
    <xsd:simpleType name="fnameType">
        <xsd:restriction base="xsd:string">
            <xsd:pattern value="\p{Lu}(\p{Ll})+"/>
        </xsd:restriction>
    </xsd:simpleType>
    
    <xsd:simpleType name="addressType">
        <xsd:restriction base="xsd:string">
            <xsd:pattern value="\p{Lu}(\p{Ll})+\,\sCo.\s\p{Lu}(\p{Ll})+"/>
        </xsd:restriction>
    </xsd:simpleType>
    
    <!-- Schema declaration -->
    <xsd:element name="details">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="item" maxOccurs="unbounded">
                    <xsd:complexType>
                        <xsd:sequence>
                            <xsd:element name="cost" type="costType"/>
                            <xsd:element name="quantity" type="quantityType"/>
                        </xsd:sequence>
                    </xsd:complexType>
                </xsd:element>
                <xsd:element name="from" maxOccurs="unbounded">
                    <xsd:complexType>
                        <xsd:sequence>
                            <xsd:element name="title" type="titleType"/>
                            <xsd:element name="fname" type="fnameType"/>
                            <xsd:element name="surname" type="fnameType"/>
                            <xsd:element name="address" type="addressType"/>
                            <xsd:element name="payment"/>
                        </xsd:sequence>
                    </xsd:complexType>
                </xsd:element>
            </xsd:sequence>
            
            <!-- Attribute declaration -->
            <xsd:attribute name="credit">
                <xsd:simpleType>
                    <xsd:restriction base="xsd:string">
                        <xsd:enumeration value="VISA"/>
                        <xsd:enumeration value="Access"/>
                        <xsd:enumeration value="Mastercard"/>
                    </xsd:restriction>
                </xsd:simpleType>
            </xsd:attribute>
            
            <xsd:attribute name="number">
                <xsd:simpleType>
                    <xsd:restriction base="xsd:string">
                        <xsd:pattern value="\d{16}"/>
                    </xsd:restriction>
                </xsd:simpleType>
            </xsd:attribute>
    
            <xsd:attribute name="expiry">
                <xsd:simpleType>
                    <xsd:restriction base="xsd:string">
                        <xsd:pattern value="/d{2}///d{2}"/>
                    </xsd:restriction>
                </xsd:simpleType>
            </xsd:attribute>
    
            <xsd:attribute name="cvv">
                <xsd:simpleType>
                    <xsd:restriction base="xsd:string">
                        <xsd:pattern value="\d{3}"/>
                    </xsd:restriction>
                </xsd:simpleType>
            </xsd:attribute>
            
        </xsd:complexType>
    </xsd:element>

</xsd:schema>
